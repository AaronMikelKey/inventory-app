doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet' type='text/css' href='https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css')
    link(rel='stylesheet', href='./stylesheets/style.css')
  body
    aside
      p.menu-label General
        ul.menu-list
          li
            a(href='/') Home
      p.menu-label Parts
        ul.menu-list
          each key, val in component_list
            li
              a(href='/catalog/' + val) #{key}
    block content
    // Everything in content needs to be wrapped in a 
      container div for the sidebar to work.
