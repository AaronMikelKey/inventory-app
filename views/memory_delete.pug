extends layout

block content
  div.container
    section(class='hero is-dark is-danger') 
      div.hero-body
        div.container
          h1.title.has-text-black Do you really want to delete this memory from inventory list?
          br
          h3.subtitle.has-text-black There is currently #[strong #{memory.amount}] in stock.

    div.card.bigCard.my-2.px-5.py-2.has-background-danger
      p #[strong #{memory.manufacturer} #{memory.name}]
      p #[strong #{memory.type}]
      p #[strong Price:] $ #{memory.price} 
      p #[strong Color:] #{memory.color}
      p #[strong In Stock:] #{memory.amount}
    
    form(method='POST' action='')
      div.form-group
        input#memoryid.form-control(type='hidden',name='memoryid', required='true', value=memory._id )

      button.button.is-danger(type='submit') Delete