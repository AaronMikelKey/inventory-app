extends layout

block content
  div.container
    section(class='hero is-dark is-danger') 
      div.hero-body
        div.container
          h1.title.has-text-black Do you really want to delete this video card from inventory list?
          br
          h3.subtitle.has-text-black There is currently #[strong #{videoCard.amount}] in stock.

    div.card.bigCard.my-2.px-5.py-2.has-background-danger
      p #[strong #{videoCard.manufacturer} #{videoCard.name}]
      p #[strong #{videoCard.type}]
      p #[strong Price:] $ #{videoCard.price} 
      p #[strong Color:] #{videoCard.color}
      p #[strong In Stock:] #{videoCard.amount}
    
    form(method='POST' action='')
      div.form-group
        input#videoCardid.form-control(type='hidden',name='videoCardid', required='true', value=videoCard._id )

      button.button.is-danger(type='submit') Delete