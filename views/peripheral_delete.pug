extends layout

block content
  div.container
    section(class='hero is-dark is-danger') 
      div.hero-body
        div.container
          h1.title.has-text-black Do you really want to delete this peripheral from inventory list?
          br
          h3.subtitle.has-text-black There is currently #[strong #{peripheral.amount}] in stock.

    div.card.bigCard.my-2.px-5.py-2.has-background-danger
      p #[strong #{peripheral.manufacturer} #{peripheral.name}]
      p #[strong #{peripheral.type}]
      p #[strong Price:] $ #{peripheral.price} 
      p #[strong Color:] #{peripheral.color}
      p #[strong In Stock:] #{peripheral.amount}
    
    form(method='POST' action='')
      div.form-group
        input#peripheralid.form-control(type='hidden',name='peripheralid', required='true', value=peripheral._id )

      button.button.is-danger(type='submit') Delete